# ========================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ========================================
# INSTRUCTIONS:
# 1. Copy this file to .env on your Hostinger server
# 2. Fill in all values marked with "REPLACE_WITH_*"
# 3. Never commit the actual .env file to Git
# ========================================

APP_NAME="NegoGen"
APP_ENV=production
APP_KEY=REPLACE_WITH_YOUR_APP_KEY
APP_DEBUG=false
APP_URL=https://yourdomain.com

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# ========================================
# DATABASE CONFIGURATION
# ========================================
# Get these from Hostinger's cPanel > MySQL Databases
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=REPLACE_WITH_HOSTINGER_DB_NAME
DB_USERNAME=REPLACE_WITH_HOSTINGER_DB_USER
DB_PASSWORD=REPLACE_WITH_HOSTINGER_DB_PASSWORD

# ========================================
# SESSION & CACHE
# ========================================
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
CACHE_STORE=file

# ========================================
# BROADCASTING (PUSHER)
# ========================================
# Use your production Pusher app credentials
BROADCAST_DRIVER=pusher
PUSHER_APP_ID=REPLACE_WITH_PRODUCTION_PUSHER_APP_ID
PUSHER_APP_KEY=REPLACE_WITH_PRODUCTION_PUSHER_KEY
PUSHER_APP_SECRET=REPLACE_WITH_PRODUCTION_PUSHER_SECRET
PUSHER_APP_CLUSTER=ap1

